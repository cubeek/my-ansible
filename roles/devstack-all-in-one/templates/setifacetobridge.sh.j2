# First remove the old vlan device
ip link set dev eth0 down
ip link delete eth0

# Create the bridge 
brctl addbr br-eth0
brctl addif br-eth0 eth0

ip link set eth0 up
ip link set br-eth0 up

ip a del {{ controller_host_ip }}/24 dev eth0
ip a add {{ controller_host_ip }}/24 dev br-eth0
ip route add default via 192.168.121.1
